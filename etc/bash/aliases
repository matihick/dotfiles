alias sudo='sudo '
alias ls='ls --color=always'
alias l='ls -l --color=always'
alias la='ls -la --color=always'
alias vi='vim'
alias gedit='gedit -b'
alias diff='colordiff'
alias gcc='colorgcc'
alias sizeof='du -sh'
alias clear-recent='rm -f ~/.local/share/recently-used.xbel'
alias list-modules='cat /etc/rc.conf | grep MODULES='
alias list-daemons='cat /etc/rc.conf | grep DAEMONS='
alias rebundle='gem install bundler && bundle'
alias empty-gemset='rvm gemset empty'
alias public-key='cat ~/.ssh/id_rsa.pub'
alias list-connections='netstat -tlnp'
alias whatsmyip='curl ifconfig.me'
